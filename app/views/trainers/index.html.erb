<div class="page-header">
  <h1> All of the trainers </h1>
</div>

<%= link_to "Create a New Trainer", new_trainer_path, class: "btn btn-success" %>

<% @trainers.each do |trainer| %>
<div class="trainer">
  <strong><%= trainer.name %></strong>
    <p><%= trainer.cell_number %></p>
    <div class="meta">
      <%= link_to "show", trainer %>
      <span class="admin">
        <%= link_to "edit", edit_trainer_path(trainer) %>|
        <%= link_to "delete", trainer, method: :delete, data: { confirm: "Are you sure you want to delete this trainer?"} %>
      </span>
    </div>
  </div>
  <% end %>